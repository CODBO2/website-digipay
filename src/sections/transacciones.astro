---
// Components
import MetricCard from "../components/MetricCard.js";
import MetricsMonitor from "../components/MetricsMonitor.jsx";
import MainButton from "../components/MainButton.astro";

// Assets
import bigSymbolDigipay from "../assets/images/big-symbol.png"

// Styles from sections folder.
import styles from "../styles/sections/transacciones.module.scss";

// Astro props
const { id } = Astro.props;
---

<section id = { id } class = { styles.section }>
    <MetricsMonitor>
        <MetricCard metric = "79" legend = "afiliaciones"/>
        <div class = { styles.cardLogo }>
            <img src={bigSymbolDigipay.src} alt="digipay symbol">
        </div>
        <MetricCard metric = "74" legend = "dispositivos"/>
        <MetricCard metric = "61" legend = "comercios"/>
    </MetricsMonitor>
    <div class = { styles.contentWrapper }>
        <h2 class = { styles.title }>Transacciones</h2>
        <p class = { styles.description }>Contamos con una sólida base de afiliados, siendo la opción preferida por numerosos comercios. Además, estamos presentes en una amplia gama de dispositivos para garantizar una experiencia adaptada a las necesidades de nuestros clientes.</p>
        <div class = { styles.actionWrapper }>
            <p>¿Te interesa?</p>
            <MainButton/>
        </div>
    </div>
</section>